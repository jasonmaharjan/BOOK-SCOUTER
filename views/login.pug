extends layout

block content
    .container
      .row
        .col-md-5.col-md-offset-3
          .panel.panel-default
            .panel-heading
              span.glyphicon.glyphicon-lock
              |  Login
            .panel-body
              form.form-horizontal(role='form', method='POST', action='/users/login')
                .form-group
                  label.col-sm-3.control-label(for='Username')
                    | Username
                  .col-sm-9
                    input#Username.form-control(type='text', name='username', placeholder='Name', required='')
                .form-group
                  label.col-sm-3.control-label(for='Password')
                    | Password
                  .col-sm-9
                    input#Password.form-control(type='password', name='password', placeholder='Password', required='')
                .form-group.last
                  .col-sm-offset-3.col-sm-9
                    button.btn.btn-success.btn-sm(type='submit')
                      | Sign in
                    button.btn.btn-default.btn-sm(type='reset')
                      | Reset
            .panel-footer
              | Not Registred?
              a(href='/users/register') Register here
