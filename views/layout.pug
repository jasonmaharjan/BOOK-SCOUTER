doctype html
html
  head
    title Book Scouter
    link(rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css')
    link(rel='stylesheet' href='/css/style.css')
    link(rel='stylesheet' href='/css/style1.css')
    link(rel='icon' type='jpg/png' href='/image_src/iconx.png')
  body
    nav.navbar.navbar-inverse.fixed
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/books/home') BookScouter
        #navbar.collapse.navbar-collapse
          ul.nav.navbar-nav
            li
              a(href='/books/home') Home
            if user
              li
                a(href='/books/uploads') Upload Books
              li
                a(href='/books/library') Library
              li
                a(href='/books/contributions') Contributions
          ul.nav.navbar-nav.navbar-right
            if user
              li
                .col-sm-3.col-md-12
                  form.navbar-form(role='search' method='POST', action='/books/scout')
                    .input-group
                      input.form-control(type='text', placeholder='Scout by title here!', name='title')
                      .input-group-btn
                        button.btn.btn-default(type='submit')
                          i.glyphicon.glyphicon-search
              li
                a(href='/users/logout') Logout
            else

              li
                a(href='/users/register') Register
              li
                a(href='/users/login') Login

    section.header
      .container
        != messages('message', locals)
        if errors
          each error, i in errors
            div(class="alert alert-danger") #{error.msg}
        block content
        br
        hr
      footer
        p BookScouter &copy; 2019
    script(src='/bower_components/jquery/dist/jquery.js')
    script(src='/bower_components/bootstrap/dist/js/bootstrap.js')
    script(src='/js/main.js')
